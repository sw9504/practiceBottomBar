<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Background color">

        <SwitchPreference
            android:defaultValue="false"
            android:key="swPref1"
            android:title="Dark Mode" />
        <EditTextPreference
            android:defaultValue="Default value"
            android:key="editText1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Sample Text" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Management">
        <ListPreference
            android:defaultValue="reply"
            android:entries="@array/reply_entries"
            android:entryValues="@array/reply_values"
            android:key="reply"
            android:title="Default reply action" />
    </PreferenceCategory>


</PreferenceScreen>